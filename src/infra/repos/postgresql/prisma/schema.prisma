generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guardian {
  id                         String   @id @default(uuid())
  firstName                  String
  lastName                   String
  email                      String   @unique
  password                   String
  phone                      String   @unique
  accessToken                String?
  verificationToken          String
  verificationTokenCreatedAt DateTime @default(now())
  pets                       Pet[]

  @@map("guardian")
}

model Pet {
  id          String   @id @default(uuid())
  guardian    Guardian @relation(fields: [guardianId], references: [id])
  guardianId  String
  specie      Specie   @relation(fields: [specieId], references: [id])
  specieId    String
  specieAlias String?
}

model Specie {
  id   String @id @default(uuid())
  name String
  Pet  Pet[]
}

model LogError {
  id    Int      @id @default(autoincrement())
  stack String
  date  DateTime

  @@map("log_error")
}
