generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guardian {
  id                         String   @id @default(uuid())
  firstName                  String   @map("first_name")
  lastName                   String   @map("last_name")
  email                      String   @unique
  password                   String
  phone                      String   @unique
  accessToken                String?  @map("access_token")
  verificationToken          String   @map("verification_token")
  verificationTokenCreatedAt DateTime @default(now()) @map("verification_token_created_at")
  pets                       Pet[]

  @@map("guardians")
}

model Pet {
  id          String   @id @default(uuid())
  guardian    Guardian @relation(fields: [guardianId], references: [id])
  guardianId  String   @map("guardian_id")
  specie      Specie   @relation(fields: [specieId], references: [id])
  specieId    String   @map("specie_id")
  specieAlias String?  @map("specie_alias")

  @@map("pets")
}

model Specie {
  id   String @id @default(uuid())
  name String @unique
  Pet  Pet[]

  @@map("species")
}

model LogError {
  id    Int      @id @default(autoincrement())
  stack String
  date  DateTime

  @@map("log_error")
}
